<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/kosmonaut"
        android:orientation="vertical">


    <TextView android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:text="Send a message"
              android:textSize="22sp"
              android:layout_marginTop="180dp"
              android:background="@color/white"
              android:textAlignment="center"
              android:layout_gravity="center_horizontal"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_write_wish"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Meine Nachrichten"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

    <EditText android:id="@+id/et_my_wish"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#BA81F5FA"
              android:layout_marginTop="16dp"
              android:textAlignment="center"
              android:padding="20dp"
              android:visibility="invisible"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pass_wish"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Send"
            android:textSize="23sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="invisible"/>

</androidx.appcompat.widget.LinearLayoutCompat>